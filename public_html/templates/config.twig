{% extends "profile.twig" %}

{% block configuration %}
    {% set config = see() %}
    <div class="container">
        <div class="card bg-dark" style="margin-bottom: 5%; margin-top: 10%">
            <div class="card-header text-center">
                <p style="font-family: Courier New; Color: white;">Konfiguracja #{{ config.id }}</p>
            </div>
            <div class="card-body">
                <table class="table table-dark table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Model</th>
                        <th scope="col">Kolor Samochodu</th>
                        <th scope="col">Kolor Foteli</th>
                        <th scope="col">Kolor Zacisków</th>
                        <th scope="col">Wstawki</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td scope="col"><p style="font-family: Courier New;">{{ config.model }}</p></td>
                        <td scope="col"><p style="font-family: Courier New;">{{ config.kolorSamochodu }}</p></td>
                        <td scope="col"><p style="font-family: Courier New;">{{ config.kolorFoteli }}</p></td>
                        <td scope="col"><p style="font-family: Courier New;">{{ config.kolorZaciskow }}</p></td>
                        <td scope="col"><p style="font-family: Courier New;">{{ config.Wstawki }}</p></td>
                    </tr>

                    </tbody>
                </table>
                <div class="container-fluid">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src={{ image(config.model,config.kolorSamochodu) }} alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src={{ image(config.model,config.kolorFoteli) }} alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src={{ image(config.model,config.kolorZaciskow) }} alt="Third slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src={{ image(config.model,config.Wstawki) }} alt="Fourth slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <center>
                    <a href="/?page=profile">
                        <button type="button" class="btn" and style="background-color:transparent;" id="back1"><h2 style="font-family: Courier New; Color: white;">Wróć</h2></button>
                    </a>
                </center>
            </div>
        </div>
    </div>

    </div>
{% endblock %}